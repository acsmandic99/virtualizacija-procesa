<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>
	<appSettings>
		<add key="V_threshold" value="3.31"/>
		<add key="DeltaV_threshold" value="0.05"/>
		<add key="Z_threshold" value="0.5"/>
		<add key="DeltaZ_threshold" value="0.3"/>
		<add key="DeviationThresholdPercent" value="25"/>
	</appSettings>

	<system.serviceModel>
		<bindings>
			<netTcpBinding>
				<binding name="tcpBinding"
                         transferMode="Buffered">
					<reliableSession enabled="true" ordered="true"/>
				</binding>
			</netTcpBinding>
		</bindings>

		<services>
			<service name="Service.BatteryService">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4000"/>
					</baseAddresses>
				</host>

				<endpoint address="Service"
                          binding="netTcpBinding"
                          bindingConfiguration="tcpBinding"
                          contract="Common.IBatteryService"/>
			</service>
		</services>
	</system.serviceModel>
</configuration>